html
    head 
    title Edit User Data
    body
        p= `Editing details for user: ${user.username}`
        form(method="post" action='/userEdited/' + index)
            div
                label(for='firstName') First Name: 
                input(id="firstName" name="firstName" value=user.firstname)
            div
                label(for='lastName') Last Name: 
                input(id="lastName" name="lastName" value=user.lastname)
            div
                label(for='email') Email: 
                input(id="email" name="email" value =user.email)
            div
                label(for='age') Age: 
                input(id="age" name="age" value =user.age)
            div 
                input(type="submit")